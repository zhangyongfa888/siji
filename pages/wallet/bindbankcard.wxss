/* pages/cisdomshipper/wallet/bindbankcard.wxss */

.title {
  margin: 10rpx;
  color: #111;
  font-size: 16px;
}

.line {
  z-index: 1;
  height: 50px;
  width: 100%;
  border-bottom: 1rpx solid #dcdcdc;
  display: flex;
  flex-direction: row;
  margin: 10rpx;
  align-items: center;
}

.placeholder {
  flex-grow: 1;
  font-size: 16px;
  color: #666;
}

.input {
  z-index: 1;
  font-size: 16px;
  flex-grow: 1;
  color: #666;
  justify-content: center;
}

.more {
  margin-right: 10px;
  width: 13px;
  height: 13px;
}

.zhezhao {
  width: 100%;
  height: 100%;
  background-color: #000;
  filter: alpha(opacity=50);
  -moz-opacity: 0.5;
  opacity: 0.5;
  position: fixed;
  left: 0px;
  top: 0px;
  z-index: 2;
}

.top {
  z-index: 3;
  font-size: 16px;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  height: 70%;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.line_choose {
  text-align: center;
  padding: 20rpx;
  margin-left: 20rpx;
  background: #fff;
  border-bottom: 1rpx solid #dcdcdc;
}

.line_choose:active {
  background: #f5f5f5;
}
