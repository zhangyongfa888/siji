.nodata {
  display: flex;
  flex-direction: row;
  justify-content: center;
  text-align: center;
  align-items: center;
  width: 100%;
  height: 100%;
}

.banner {
  z-index: 2;
  position: fixed;
  left: 0;
  top: 0;
  background: #fff;
  height: 50rpx;
  width: 100%;
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  text-align: center;
  align-items: center;
  font-size: 15px;
}

.banneritem {
  width: auto;
  margin: 20rpx auto;
  text-align: center;
  border-bottom: 2rpx solid white;
}

.banneritemchoosed {
  border-bottom: 2rpx solid #ec6700;
}

.scroll {
  z-index: 1;
}

.item_line1 {
  padding-top: 10rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  display: flex;
  flex-direction: row;
}

.item_line1_left {
  flex-grow: 1;
  color: #333;
  font-size: 14px;
}

.item_line1_right {
  font-size: 16px;
  color: #666;
}

.item_line2 {
  padding-top: 5rpx;
  padding-bottom: 10rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #dcdcdc;
}

.item_line2_left {
  color: #666;
  flex-grow: 1;
  font-size: 14px;
}

.item_line2_right {
  font-size: 14px;
  
}

