.parent {
    background: #f5f5f5;
    height: 100%;
   
}

.item0 {
      background: #f5f5f5;

  position: relative;
  width: 700rpx;
  margin: 0rpx 25rpx 25rpx 25rpx;
  height: 257rpx;
}

.image {
  width: 700rpx;
  height: 257rpx;
  top: 0;
  left: 0;
  position: absolute;
}

.money {
   height: 257rpx;
   justify-content: center;
   
  top: 100rpx;
  left: 50rpx;
  position: absolute;
}

.zhezhao {
  width: 100%;
  height: 100%;
  background-color: #000;
  filter: alpha(opacity=50);
  -moz-opacity: 0.5;
  opacity: 0.5;
  position: fixed;
  left: 0px;
  top: 0px;
}

.payMethod {
  font-size: 16px;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  height: auto;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.payMoney {
  text-align: center;
  width: 100%;
  font-size: 20px;
  padding: 10px;
}

.payType {
  margin-left: 10px;
  width: 100%;
  font-size: 14px;
}

.item {
  padding: 10px;
  display: flex;
  flex-direction: row;
  width: 100%;
  height: auto;
}

.payBalanceLeft {
  margin-left: 10px;
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  justify-content: center; /*垂直 */
}

.payBalanceLine1 {
  font-size: 14px;
  color: #000;
}

.payBalanceLine2 {
  font-size: 12px;
  color: #666;
}

.payWx {
  font-size: 14px;
  margin-left: 10px;
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  justify-content: center; /*垂直 */
}

.paychooseWx {
  margin-right: 5%;
  display: flex;
  flex-direction: column;
  text-align: center;
  justify-content: center;
}

.recharge {
  padding-left: 10rpx;
  padding-right: 10rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  background: #ec6700;
  color: #fff;
  width: auto;
  margin-right: 5%;
  font-size: 14px;
  display: flex;
  flex-direction: column;
  text-align: center;
  justify-content: center;
}

.icon {
  display: flex;
  flex-direction: column;
  margin-left: 5%;
  height: 30px;
  width: 30px;
  justify-content: center;
}

.gopay {
  border: 2px solid;
  border-radius: 5px;
  margin-left: 5%;
  margin-right: 5%;
  justify-content: center;
  font-size: 16px;
  text-align: center;
  line-height: 40px;
  width: 90%;
  color: #fff;
  background: #ec6700;
  margin-bottom: 5%;
}
