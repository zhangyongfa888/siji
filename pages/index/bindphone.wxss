.parent {
  font-size: 15px;
  padding: 20px;
  display: flex;
  flex-direction: column;
}

.line2 {
  padding: 10px 20px 10px 20px;
  border-bottom: 1px solid #dcdcdc;
  display: flex;
  flex-direction: row;
}

.line2input {
  flex-grow: 1;
}

.getCode {
  padding: 5px 15px 5px 15px;
  margin: auto;
  text-align: center;
  justify-content: center;
  font-size: 15px;
  border-radius: 20px;
  color: white;
  background: #ec6700;
}

.bind {
  margin-top: 30px;
  padding-top: 10px;
  padding-bottom: 10px;
  width: 100%;
  text-align: center;
  justify-content: center;
  font-size: 15px;
  border-radius: 5px;
  color: white;
  background: #ec6700;
}
