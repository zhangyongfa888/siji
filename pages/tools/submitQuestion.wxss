/* pages/tools/submitQuestion.wxss */

.type {
  display: flex;
  flex-direction: row;
}

.type1 {
  font-size: 28rpx;
  margin: 10rpx;
  padding: 5rpx 20rpx 5rpx 20rpx;
  border-radius: 10rpx;
  color: #666;
  background: white;
  border: 2rpx solid #666;
}

.checked {
  border-radius: 10rpx;
  color: white;
  background: #e36700;
  border: 2rpx solid #e36700;
}

.content {
  border-top: 20rpx solid #f5f5f5;
  height: 300rpx;
  border-bottom: 20rpx solid #f5f5f5;
}

.content-textarea {
  font-size: 28rpx;
  margin: 20rpx;
}

.submit {
  margin: 20rpx;
  background-color: #e36700;
  color: white;
}
