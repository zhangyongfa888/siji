/* pages/tools/settingpwd.wxss */

.parent {
  font-size: 14px;
  margin: 5%;
  display: flex;
  flex-direction: column;
}

.pwd {
  padding: 10px 20px 10px 20px;
  border-bottom: 1rpx solid #dcdcdc;
  font-size: 14px;
  color: #111;
}

.submit {
  margin-top: 40px;
  font-size: 16px;
  text-align: center;
  padding: 10px;
  color: white;
  background: #e60;
  border-radius: 10rpx;
  width: 90%;
}

.submit:active {
  background: #e64;
}

.line2 {
  padding: 10px 20px 10px 20px;
  border-bottom: 1px solid #dcdcdc;
  display: flex;
  flex-direction: row;
}

.line2input {
  flex-grow: 1;
}

.getCode {
  padding: 5px 15px 5px 15px;
  margin: auto;
  text-align: center;
  justify-content: center;
  font-size: 15px;
  border-radius: 20px;
  color: white;
  background: #ec6700;
}
