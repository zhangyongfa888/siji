/* pages/tools/message.wxss */

.parent {
  width: 750rpx;
  font-size: 15px;
  display: flex;
  flex-direction: column;
}

.nodata {
  margin-top: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  text-align: center;
  align-items: center;
  width: 100%;
  height: 100%;
}

.item {
  margin: 10rpx;
  border-top: 1rpx solid #f5f5f5;
  border-left: 1rpx solid #f5f5f5;
  border-radius: 10rpx;
  border-bottom: 2rpx solid #dcdcdc;
  border-right: 2rpx solid #dcdcdc;
  display: flex;
  flex-direction: column;
}

.item:active {
  background: #f5f5f5;
}

.line1 {
  padding: 10rpx;
  display: flex;
  flex-direction: row;
}

.line2 {
  padding: 10rpx;
  display: flex;
  flex-direction: row;
}

.title { 
  color: #111;
 flex-grow: 1;
}

.time {
  color: #666;
}

.content {
   color: #666;
  flex-grow: 1;
}
