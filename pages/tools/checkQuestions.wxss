/* pages/tools/checkQuestions.wxss */
@import '../../utils/wxParse/wxParse.wxss';

.parent {
  display: flex;
  flex-direction: column;
}

.item {
  margin: 20rpx;
  display: flex;
  flex-direction: row;
  font-size: 30rpx;
}

.temp {
  display: flex;
  flex-direction: column;
}

.bottom {
  background: white;
  width: 750rpx;
  position: fixed;
  bottom: 0;
  height: auto;
  display: flex;
  flex-direction: column;
  justify-items: center;
}

.bottom-info {
  font-size: 30rpx;
  background: #f5f5f5;
  padding: 20rpx;
  text-align: center;
}

.bottom-btn {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  justify-items: center;
}

.bottom-img {
  margin-right: 10rpx;
  width: 40rpx;
  height: 40rpx;
}

.bottom-border {
  border-right: 2rpx solid #dcdcdc;
}

.bottom-line {
  font-size: 30rpx;
  text-align: center;
  width: 50%;
  justify-items: center;
  align-items: center;
  display: flex;
  justify-content: center;
  flex-direction: row;
}
