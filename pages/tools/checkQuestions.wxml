<!--pages/tools/checkQuestions.wxml-->
<!-- var wxParse = require('../../utils/wxParse/wxParse.js'); -->
<import src="../../utils/wxParse/wxParse.wxml" />

<view class='parent'>

  <view class='item'>
    <text>Q:</text>
    <text>{{title}}</text>
  </view>
  <view class='item'>
    <text>A:</text>
    <view class='temp'>
      <template is="wxParse" data="{{wxParseData:article.nodes}}" />
    </view>

  </view>


</view>



<view class='bottom'>
  <view class='bottom-info'> 如果没解决您的问题</view>
  <view class='bottom-btn'>

    <view class='bottom-line bottom-border' bindtap='submitQuestion'>
      <image src='http://res.zhangyongfa888.site/icon_ques_feed_back.png' mode='aspectFit' class='bottom-img'> </image>
      <text>问题反馈</text>
    </view>
    <view class='bottom-line' bindtap='call'>
      <image src='http://res.zhangyongfa888.site/icon_contact_center.png' mode='aspectFit' class='bottom-img'> </image>
      <text>联系客服</text>
    </view>
  </view>
</view>