/* pages/tools/about.wxss */

.parent {
  display: flex;
  flex-direction: column;
}

.banner {
  justify-content: center;
  width: 100%;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
  height: 300rpx;
  align-items: center;
}

.logo {
  width: 100rpx;
  height: 100rpx;
}

.name {
  color: #e60;
  margin: 10px;
  font-size: 14px;
}

.info {
  margin: 10px;
  padding-bottom: 10px;
  border-bottom: 1rpx solid #dcdcdc;
}

.infocontent {
  font-size: 14px;
  color: #111;
}

.contactus {
  margin: 10px;
  display: flex;
  flex-direction: column;
}

.line1 {
  margin-top: 4px;
  font-size: 15px;
  color: #000;
  display: flex;
  flex-direction: row;
}

.tel {
  margin-left: 10px;
  color: #e60;
}
