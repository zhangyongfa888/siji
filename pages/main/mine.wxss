/* pages/main/mine.wxss */

.parent {
  display: flex;
  flex-direction: column;
}

.banner {
  background: #ec6700;
  height: 250rpx;
  display: flex;
  flex-direction: row;
}

.bannerhead {
  margin-left: 30rpx;
  margin-top: 60rpx;
  border-radius: 50rpx;
  width: 100rpx;
  height: 100rpx;
}

.bannerinfo {
  margin-left: 20rpx;
  margin-top: 60rpx;
  display: flex;
  flex-direction: column;
}

.name {
  color: white;
  font-size: 30rpx;
}

.status {
  text-align: center;
  width: 120rpx;
  padding-left: 25rpx;
  padding-right: 25rpx;
  padding-top: 2rpx;
  padding-bottom: 2rpx;
  margin-top: 10rpx;
  font-size: 28rpx;
  background: white;
  color: #ec6700;
}

.menu {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.menuitem {
  padding: 20rpx 0 20rpx 0;
  justify-content: center;
  align-items: center;
  border-bottom: 20rpx solid #f5f5f5;
  width: 250rpx;
}

.menutxt {
  font-size: 32rpx;
  color: #666;
  text-align: center;
}

.tools {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: wrap;
}

.toolsitem {
  display: flex;
  flex-direction: column;
  padding: 20rpx 0 20rpx 0;
  justify-content: center;
  align-items: center;
  width: 187.5rpx;
}
.toolsitem:active{
  background: #f5f5f5;
}
.toolsimg {
  width: 70rpx;
  height: 70rpx;
}

.toolsname {
  margin-top: 5rpx;
  font-size: 30rpx;
  color: #666;
  text-align: center;
}
