  </view>

</view>
<view wx:else>
  <view style='background:#f5f5f5;width:100%;height:{{height}}px;'>
    <orderItem list='{{list}}' bind:call="callphone" bind:viewOrderDetail="viewOrderDetail"></orderItem>
  </view>

</view>