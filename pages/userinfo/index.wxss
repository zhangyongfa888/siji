/* pages/userinfo/index.wxss */

.infocontainer {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.infoimg {
  margin-top: 100rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
}

.infoname {
  margin-bottom: 50rpx;
  margin-top: 10rpx;
  font-size: 16px;
  color: #f78312;
}

.divier {
  border-top: 1rpx solid #f5f5f5;
  
}

.line {

  padding: 5px;
  width: 100%;
  display: flex;
  border-bottom: 1rpx solid #dcdcdc;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.line:active{
  background: #f5f5f5;
}

.lineimg {
  margin: 10px;
  width: 50rpx;
  text-align: center;
  height: 50rpx;
  justify-content: center;
}

.linetitle {
  margin: 5px;
  text-align: left;
  flex-grow: 1;
  font-size: 16px;
  color: #333;
  justify-content: center;
}

.linearrow {
  margin-right: 20px;
  text-align: center;
  justify-content: center;
  height: 25rpx;
  width: 15rpx;
}
