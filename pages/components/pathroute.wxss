/* pages/components/pathroute.wxss */

.parent {
  width: 750rpx;
  display: flex;
  flex-direction: row;
}

.dotline {
  align-items: center;
  margin-left: 20rpx;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.greendot {
  border-radius: 12rpx;
  width: 12rpx;
  height: 12rpx;
  background: #00e770;
}

.orangedot {
  border-radius: 12rpx;
  width: 12rpx;
  height: 12rpx;
  background: #e67000;
}

.line {
  background: #dcdcdc;
  width: 1rpx;
  height: 50rpx;
}

.path {
  flex-grow: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: stretch;
  height: 120rpx;
}

.name {
  height: 60rpx;
  color: #333;
  font-size: 28rpx;
}

.delete {
  font-size: 28rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 200rpx;
  color: red;
}
